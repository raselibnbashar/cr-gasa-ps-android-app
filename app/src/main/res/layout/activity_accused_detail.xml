<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:paddingTop="20dp"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            app:tint="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="পরোয়ানা বিস্তারিত"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/statusBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingBottom="10dp"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRunning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="চলমান"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginEnd="2dp"
            app:cornerRadius="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTamil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="তামিল"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginHorizontal="2dp"
            app:cornerRadius="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRecall"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="রিকল"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/card_bg"
            android:layout_marginHorizontal="2dp"
            app:cornerRadius="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOther"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="অন্যান্য"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginStart="2dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBtnContainer"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/emerald_400"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailGuardian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/slate_400"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="@color/slate_800" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="মামলা নম্বর"
                        android:textColor="@color/slate_500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/detailCaseNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ধারা"
                        android:textColor="@color/slate_500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/detailSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="প্রসেস নম্বর"
                android:textColor="@color/slate_500"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/detailProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ঠিকানা"
                android:textColor="@color/slate_500"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/detailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ওয়ার্ড, থানা ও জেলা"
                android:textColor="@color/slate_500"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/detailWardPsDist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="@color/slate_800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আদালতের নাম"
                android:textColor="@color/slate_500"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/detailCourt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/detailCourtDist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/slate_400"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailOfficerSl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/slate_500"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>