<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/hindsiliguri_regular"
            android:textColor="@color/emerald_400"
            android:textSize="48sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/appSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hindsiliguri_regular"
            android:text="@string/sub_name"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="-25dp"
            android:textSize="33sp"
            android:textStyle="normal"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/solaimanlipi"
            android:text="@string/sponsor"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/developBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/solaimanlipi"
            android:text="@string/develop"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>