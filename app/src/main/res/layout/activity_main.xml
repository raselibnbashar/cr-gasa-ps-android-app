<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hindsiliguri_regular"
                android:text="@string/app_name"
                android:textColor="@color/emerald_400"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hindsiliguri_regular"
                android:text="@string/sub_name"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/appTitleSwitchDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/themeToggleIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_sun" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/sponsorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/sponsor"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center_vertical" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sponsorText"
        android:layout_above="@+id/bottomNav"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sponsorText"
        android:layout_above="@+id/bottomNav">

        <LinearLayout
            android:id="@+id/fixed_top_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:id="@+id/heading_div"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="65"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_bg"
                            android:id="@+id/runningWarrant"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="চলমান পরোয়ানা"
                                android:drawableLeft="@drawable/run"
                                android:drawablePadding="5dp"
                                android:textColor="@color/red_500"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:id="@+id/runningAccused"
                                android:textColor="@color/red_500"
                                android:textSize="50sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="35"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/totalWarrant"
                                android:background="@drawable/card_bg"
                                android:padding="10dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="মোট পরোয়ানা"
                                    android:drawableLeft="@drawable/user"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/white"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/totalAccused"
                                    android:textColor="@color/white"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/card_bg"
                                android:id="@+id/doneWarrant"
                                android:padding="10dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="নিষ্পত্তি"
                                    android:drawableLeft="@drawable/correct_sign"
                                    android:drawablePadding="5dp"
                                    android:textColor="@color/emerald_400"
                                    android:textSize="12sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/doneAccused"
                                    android:textColor="@color/emerald_400"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/search_div"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg"
                    android:id="@+id/searchBarMain"
                    android:hint="পরোয়ানা খোঁজ"
                    android:drawableLeft="@drawable/search"
                    android:drawableTint="@color/slate_400"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:textColorHint="@color/slate_400"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/searchTotalItem"
                    android:textColor="@color/emerald_400"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accusedFrontList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fixed_top_content"
            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            tools:listitem="@layout/accused_list" />

        <Button
            android:id="@+id/newAccusedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red_600"
            android:text="নতুন পরোয়ানা"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/user_add"
            android:textAllCaps="false"
            app:cornerRadius="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:id="@+id/home"
            app:tint="@color/white" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/list"
            android:id="@+id/list"
            app:tint="@color/white" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/more"
            android:id="@+id/more"
            app:tint="@color/white" />
    </LinearLayout>

</RelativeLayout>