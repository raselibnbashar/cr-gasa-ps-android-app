<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accusedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/arrast_sign"
                android:textColor="@color/red_500"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accusedGuardian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/slate_400"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/accusedAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/slate_300"
                android:layout_marginTop="2dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/accusedSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/slate_400"
                android:layout_marginTop="4dp"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accusedCaseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accusedProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/emerald_400"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accusedWardPs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/slate_400"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/accusedStepStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/card_bg" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>